<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chating_margin_top_bottom"
    android:layout_marginRight="@dimen/chating_margin_left_right"
    android:layout_marginTop="@dimen/chating_margin_top_bottom"
    android:gravity="right" >

    <ImageView
        android:id="@+id/chating_avatar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/chating_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@+id/chating_avatar"
        android:background="@drawable/bubble_right"
        android:lineSpacingExtra="4.0dip"
        android:paddingBottom="4.0dip"
        android:paddingLeft="7.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="4.0dip"
        android:textColor="@color/textgrey"
        android:textSize="15.0sp" />

</RelativeLayout>