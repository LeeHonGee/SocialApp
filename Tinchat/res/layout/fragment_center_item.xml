<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_center_item_view"
    android:layout_width="fill_parent"
    android:layout_height="55dip"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fragment_center_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/fragment_center_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:text="@string/fragment_center_item_name"
            android:textColor="#535b5e"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_public_arrow" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="bottom"
        android:background="#ffc8c8c8" />
</FrameLayout>