<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_rootview"
    android:layout_width="fill_parent"
    android:layout_height="65.0dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="10.0dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/location_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="特发信息港"
            android:textColor="#ff4c4c4c"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/location_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center_vertical"
            android:paddingTop="5.0dip"
            android:singleLine="true"
            android:text="广东省深圳市宝安区新安街道碧涛居碧涛居"
            android:textColor="@color/textgrey"
            android:textSize="13.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/location_item_select"
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        android:layout_gravity="right|center"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/ic_confirm_selected"
        android:button="@null"
        android:checked="false"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:layout_gravity="bottom"
        android:background="@color/textgrey" />

</FrameLayout>