<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/activtiy_title_bg" >

        <Button
            android:id="@+id/title_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10.0dip"
            android:background="@color/transparent"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="15.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="搜索条件"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/selector_btn_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:layout_margin="20.0dip"
        android:gravity="center_vertical" >

        <com.sharemob.tinchat.component.BrandTextView
            android:id="@+id/more_window_local"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawableTop="@drawable/ic_search_nearby"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:text="附近"
            android:textColor="@color/slategrey"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <com.sharemob.tinchat.component.BrandTextView
            android:id="@+id/more_window_online"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawableTop="@drawable/ic_search_city"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:text="找同城"
            android:textColor="@color/slategrey"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <com.sharemob.tinchat.component.BrandTextView
            android:id="@+id/more_window_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawableTop="@drawable/ic_search_country"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:text="找老乡"
            android:textColor="@color/slategrey"
            android:textSize="14.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/layout_search_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/whitesmoke"
        android:cacheColorHint="@null"
        android:divider="#ffcbcbcb"
        android:dividerHeight="1.0px"
        android:duplicateParentState="false"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:listSelector="@drawable/selector_list_item"
        android:scrollbars="none" />

</LinearLayout>