<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.sharemob.tinchat.component.BannerSlideView
        android:id="@+id/shopping_top_banner"
        android:layout_width="fill_parent"
        android:layout_height="170.0dip" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_icon_gridview"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:listSelector="@drawable/selector_list_item"
        android:scrollbars="none" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"
        android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="限时抢购•"
                android:textColor="@color/black"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center"
                android:layout_marginRight="5.0dip"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="距本场结束"
                android:textColor="@color/red"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopping_sale_time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:background="@drawable/alipay_refresh"
                android:gravity="center"
                android:padding="4.0dip"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2.0dip"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="17.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopping_sale_time_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/alipay_refresh"
                android:gravity="center"
                android:padding="4.0dip"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2.0dip"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="17.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopping_sale_time_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/alipay_refresh"
                android:gravity="center"
                android:padding="4.0dip"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/shopping_sale_time_more"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="全部>"
            android:textColor="@color/grey"
            android:textSize="15.0sp"
            android:textStyle="bold" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_saletime"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:listSelector="@drawable/selector_list_item"
        android:scrollbars="none" />

</LinearLayout>