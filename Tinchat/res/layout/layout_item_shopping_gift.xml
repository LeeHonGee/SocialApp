<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <ImageView
            android:id="@+id/gift_icon"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:padding="5.0dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gift_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gift_tv_username"
                android:text="玫瑰之约"
                android:textColor="@color/black"
                android:textSize="19.0sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/gift_tv_moral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4.0dip"
                    android:text="纯真与热情"
                    android:textColor="@color/textgrey"
                    android:textSize="13.0sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/gift_tv_price"
                    android:layout_width="90.0dip"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/gift_tv_username"
                    android:background="@drawable/style_attention_border"
                    android:paddingTop="4.0dip"
                    android:text="价格:1元/朵"
                    android:textColor="@color/color_red"
                    android:textSize="14.0sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/gift_btn_give"
            android:layout_width="80.0dip"
            android:layout_height="35.0dip"
            android:layout_gravity="right|center"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/style_btn_latest_login"
            android:text="赠送"
            android:textColor="@color/white"
            android:textSize="14.0sp"
            android:textStyle="normal" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffc8c8c8" />

</LinearLayout>