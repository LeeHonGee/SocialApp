<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0.0dip" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_comment_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="55.0dip"
            android:background="@color/white"
            android:gravity="fill_horizontal|center"
            android:hint="发消息"
            android:maxEms="10"
            android:maxLength="100"
            android:paddingLeft="15.0dip"
            android:paddingRight="5.0dip"
            android:textColor="@color/textgrey"
            android:textColorHint="@color/textgrey"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_comment_send"
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_margin="3.0dip"
            android:background="#ff159aff"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="14.0sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_weight="10.0" >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ic_chat_emote_normal" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ic_chat_audio_normal" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ic_imagepicker_camera" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ic_chat_select_pic_normal" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ic_chat_loc_normal" />
    </LinearLayout>

</LinearLayout>