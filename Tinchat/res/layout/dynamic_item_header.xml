<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header"
    android:layout_width="fill_parent"
    android:layout_height="150.0dip"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layout_header_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_like_match_bg" />

    <LinearLayout
        android:id="@+id/layout_change_avatar"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_gravity="bottom"
        android:layout_margin="15.0dip"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mine_dynamic_avatar"
            android:layout_width="80.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="30.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/public_default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mine_dynamic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="3.0dip"
                android:text="25"
                android:textColor="@color/whitesmoke"
                android:textSize="20.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="3.0dip"
                android:text="动态"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mine_dynamic_read_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="3.0dip"
                android:text="1846"
                android:textColor="@color/whitesmoke"
                android:textSize="20.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="3.0dip"
                android:text="浏览次数"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>