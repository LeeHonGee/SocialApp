<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10.0dip" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5.0dip" >

        <LinearLayout
            android:id="@+id/goods_comment_grade"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goods_comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:text="Lee***e"
                android:textColor="@color/black"
                android:textSize="13.0sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/goods_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:text="2016.08.21"
                android:textColor="@color/gray"
                android:textSize="13.0sp"
                android:textStyle="normal" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip"
        android:background="#ffe5e5e5" />

    <TextView
        android:id="@+id/goods_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="5.0dip"
        android:text="又小巧又可爱 拿到手上很方便 下个月再来"
        android:textColor="@color/black"
        android:textSize="13.0sp"
        android:textStyle="normal" />

    <com.sharemob.tinchat.lib.photoview.NoScrollGridView
        android:id="@+id/goods_comment_attach_photos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2.0dip"
        android:columnWidth="120.0dip"
        android:gravity="center"
        android:horizontalSpacing="2.0dip"
        android:listSelector="@drawable/selector_list_item"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2.0dip" />

</LinearLayout>