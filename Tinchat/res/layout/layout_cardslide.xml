<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="bottom|center"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="80.0dip"
        android:layout_height="fill_parent"
        android:padding="5.0dip" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill"
            android:alpha="0.3"
            android:background="@drawable/style_bg_circle" />

        <Button
            android:id="@+id/card_left_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:layout_margin="10.0dip"
            android:background="@drawable/ignore_button" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="80.0dip"
        android:layout_height="fill_parent"
        android:padding="5.0dip" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill"
            android:alpha="0.3"
            android:background="@drawable/style_bg_circle" />

        <Button
            android:id="@+id/card_center_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:background="@drawable/home_button" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="80.0dip"
        android:layout_height="fill_parent"
        android:padding="5.0dip" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill"
            android:alpha="0.3"
            android:background="@drawable/style_bg_circle" />

        <Button
            android:id="@+id/card_right_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:background="@drawable/like_button" />
    </FrameLayout>

</LinearLayout>