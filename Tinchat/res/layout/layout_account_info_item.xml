<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="14.0dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/listview_pet_item_icon"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:src="@drawable/img_integral_xiaotuan"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/listview_pet_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="比卡丘"
                    android:textColor="@color/black"
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/listview_pet_item_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_movie_score_pressed"
                    android:gravity="center_vertical"
                    android:text="23"
                    android:textColor="@color/textgrey"
                    android:textSize="13.0sp"
                    android:textStyle="normal"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_pet_item"
                android:layout_width="65.0dip"
                android:layout_height="35.0dip"
                android:background="@drawable/style_btn_login_register"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="约 战"
                android:textColor="#ffffffff"
                android:textSize="10.0sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>